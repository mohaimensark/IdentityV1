<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#071800"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/headerM"
        android:text="Request list"
        android:textSize="30dp"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="#45B300"
        android:background="#000600"
        />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="3dp"
           android:id="@+id/messageBar"
           android:background="@color/purple_700"
           android:layout_below="@+id/headerM"
           />

    <TextView
        android:id="@+id/messageView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/messageBar"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="#F9F7F8"
        android:text="Messaged you!"
        android:textAlignment="center"

        android:textColor="#F50828"
        android:textSize="23dp" />




</RelativeLayout>